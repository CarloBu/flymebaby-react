---
import Layout from '../layouts/Layout.astro';
import FlightSearch from '../components/react/FlightSearch';
import { ThemeToggle } from '../components/ThemeToggle';

const pageTitle = 'Flight Search';
const pageDescription =
	'Search and compare the best Ryanair flight deals. Find cheap flights to your favorite destinations with our easy-to-use flight search engine.';
---

<Layout
	title={pageTitle}
	description={pageDescription}>
	<script is:inline>
		const getThemePreference = () => {
			if (
				typeof localStorage !== 'undefined' &&
				localStorage.getItem('theme')
			) {
				return localStorage.getItem('theme');
			}
			return 'light';
		};
		const isDark = getThemePreference() === 'dark';
		document.documentElement.classList[isDark ? 'add' : 'remove']('dark');

		if (typeof localStorage !== 'undefined') {
			if (!localStorage.getItem('theme')) {
				localStorage.setItem('theme', 'light');
			}

			const observer = new MutationObserver(() => {
				const isDark = document.documentElement.classList.contains('dark');
				localStorage.setItem('theme', isDark ? 'dark' : 'light');
			});
			observer.observe(document.documentElement, {
				attributes: true,
				attributeFilter: ['class'],
			});
		}
	</script>

	<main class='relative mx-auto min-h-[calc(100vh)] py-1 sm:py-8'>
		<div class='fixed right-4 top-4 z-50'>
			<ThemeToggle client:load />
		</div>

		<div class='text-center'>
			<h1 class='mt-8 text-4xl font-bold'>Fly me baby</h1>
		</div>
		<FlightSearch client:load />

		<a
			href='https://oaksun.studio'
			target='_blank'
			rel='noopener noreferrer'
			class='fixed bottom-4 right-4 flex items-center gap-1 rounded-full px-4 py-1 text-sm text-gray-600 transition-colors duration-300 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white'>
			made by
			<span class='font-semibold'>OAKSUN</span>
		</a>
	</main>
</Layout>
