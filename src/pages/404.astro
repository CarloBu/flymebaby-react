---
import Layout from '../layouts/Layout.astro';
import { ThemeToggle } from '../components/ThemeToggle';
---

<Layout title='404 - Page Not Found'>
	<main class='relative min-h-screen bg-white dark:bg-gray-900'>
		<div
			class='pointer-events-none relative z-10 flex min-h-screen flex-col items-center justify-center px-4 text-center'>
			<div
				class='pointer-events-auto space-y-8 rounded-3xl bg-white/80 p-8 shadow-lg backdrop-blur-xl transition-colors duration-300 dark:bg-gray-800/80 dark:shadow-gray-900/30'>
				<h1 class='text-6xl font-bold text-bubble-color'>404</h1>

				<div class='space-y-4'>
					<h2
						class='text-2xl font-semibold text-gray-800 transition-colors duration-300 dark:text-gray-200'>
						Page Not Found
					</h2>
					<p
						class='text-gray-600 transition-colors duration-300 dark:text-gray-400'>
						Oops! The page you're looking for has taken off to an unknown
						destination.
					</p>
				</div>

				<a
					href='/'
					class='button-animation inline-flex min-w-[8rem] cursor-pointer select-none items-center justify-center rounded-full bg-bubble-color px-8 py-4 text-base text-white shadow-bubble-shadow transition-all duration-300 hover:bg-bubble-color-hover hover:shadow-bubble-hover-shadow dark:bg-bubble-color dark:text-white dark:hover:bg-bubble-color-hover dark:hover:shadow-bubble-hover-shadow'>
					Return Home
				</a>
			</div>
		</div>

		<canvas
			id='physics-canvas'
			class='fixed inset-0 h-full w-full'
		></canvas>
	</main>
</Layout>

<script>
	import { initPhysics } from '../scripts/404Physics';

	const canvas = document.getElementById('physics-canvas') as HTMLCanvasElement;
	if (canvas) {
		const cleanup = initPhysics(canvas);
		window.addEventListener('beforeunload', cleanup);
	}
</script>

<style is:global>
	body {
		overflow: hidden;
		position: fixed;
		width: 100%;
		height: 100%;
		touch-action: manipulation;
		-webkit-user-select: none;
		user-select: none;
	}
</style>
